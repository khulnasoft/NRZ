{
  "name": "@nrz/types",
  "version": "2.4.0",
  "description": "Nrz types",
  "homepage": "https://nrz.build/repo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/khulnasoft/nrz",
    "directory": "packages/nrz-types"
  },
  "bugs": {
    "url": "https://github.com/khulnasoft/nrz/issues"
  },
  "main": "src/index.ts",
